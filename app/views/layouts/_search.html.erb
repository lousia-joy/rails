<div style="display: flex; justify-content: center; align-items: center; height: 20vh;">
  <form id="search-form" style="display: flex; gap: 10px;" onsubmit="event.preventDefault(); jumpToTopic();">
    <input id="topic-input" type="text" placeholder="输入你想看的话题" style="padding: 8px; width: 250px;">
    <button type="submit" style="padding: 8px 16px;">确认</button>
  </form>
</div>

<script>
  function jumpToTopic() {
    const topic = document.getElementById("topic-input").value.trim();
    if (topic) {
      window.location.href = `/topics/${encodeURIComponent(topic)}`;
    }
  }
</script>